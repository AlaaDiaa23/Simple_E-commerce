@model List<Product>

      <main>
                    <div class="container-fluid px-4">
                       
                       
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                          <a asp-action="Create" asp-controller="Product" class="btn btn-outline-success">Add New</a>
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                           
                                            <th>Name</th>
                                                <th></th>
                                                <th></th>
                                            <th>Description</th>
                                                  <th></th>
                                                  <th></th>
                                            <th>price</th>
                                                   <th></th>
                                                   <th></th>
                                            <th>categoryName</th>
                                                   <th></th>
                                                   <th></th>
                                             <th>Image</th>
                                             <th></th>
                                        </tr>
                                    </thead>
                            
                                    <tbody>
                                       
                                       @foreach (var item in Model)
                            { <tr>
                                <td>@item.Name</td>
                                <td></td>
                                <td></td>
                                <td>@item.Description</td>
                                <td></td>
                                <td></td>
                                <td>@item.Price</td>
                                <td></td>
                                <td></td>
                                <td>@item.Category.Name</td>
                                <td></td>
                                <td></td>
                                <td><img  src ="@string.Format("/Products/{0}",item.Image)"width="50" height="50" /></td>
                          <td> <a asp-action="Edit" asp-route-id="@item.Id"class="btn btn-outline-info">Edit</a>
                           <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-outline-danger">Delete</a>
                            </td>  </tr>
                            }
                                      
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </main>

 