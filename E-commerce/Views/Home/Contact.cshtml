@model Contact
    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" asp-action=" Index" asp-controller="Home">Home</a>
                    <span class="breadcrumb-item active">Contact</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Contact Start -->
    <div class="container-fluid">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Contact Us</span></h2>
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-5">
                <div class="contact-form bg-light p-30">
                    <div id="success"></div>
                    <form asp-action="Contact" asp-controller="Home"method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="control-group">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-summary="ModelOnly" class="text-danger" ></span>
                        </div>
                        <br />
                        <div class="control-group">
                            <input asp-for="Email" class="form-control"/>
                            <span asp-validation-summary="ModelOnly" class="text-danger" ></span>

                        </div>
                        <br />

                        <div class="control-group">
                            <input asp-for="Subject" class="form-control"/>
                            <span asp-validation-summary="ModelOnly" class="text-danger" ></span>

                        </div>
                        <br />
                        <div class="control-group">
                            <textarea asp-for="Message"class="form-control"></textarea>
                            <span asp-validation-summary="ModelOnly" class="text-danger" ></span>

                        </div>
                        <br />
                        <div>
                            <button class="btn btn-primary py-2 px-4" type="submit">Send
                                Message</button>
                        </div>
                    </form>
                </div>
            </div>
           
        </div>
    </div>
    <!-- Contact End -->

